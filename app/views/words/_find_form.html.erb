<%= form_for words_path, method: :get do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= select_tag :category_id, options_from_collection_for_select(@categories,
          :id, :name, params[:category_id]), include_blank: t("all") %>
        <div class="row">
          <% Settings.filter.each do |key, value|%>
            <div class="col-md-4">
              <div class="row">
                <div class="col-md-6">
                  <%= label_tag value.titleize %>
                </div>
                <div class="col-md-6">
                  <%= radio_button_tag :filter_state, value,
                    checked = (params[:filter_state] == value ||
                      params[:filter_state].blank?) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="tm-submit col-md-2 col-md-offset-5">
      <%= f.submit t("search"), class: "btn btn-lg btn-success" %>
      </div>
    </div>
  </div>
  <hr>
<% end %>
