<div class="container">
  <div class="row">
    <h1><%= t "word_list" %></h1>
    <%= render "find_form" %>
    <div class="col-md-4 col-md-offset-4">
      <table class="table table-hover">
        <tr class="colss">
          <th><%= t "word" %></th>
          <th><%= t "mean" %></th>
        </tr>
        <% @words.each do |word| %>
          <tr>
            <td><%= word.content %></td>
            <td>
              <% word.meanings.each do |meaning| %>
                <%= meaning.content if meaning.is_correct %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </table>
    </div>

    <div class="col-md-6 col-md-offset-3 paginate">
      <%= will_paginate %>
    </div>
  </div>
</div>
