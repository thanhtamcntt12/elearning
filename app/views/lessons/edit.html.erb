<% provide :title, t("lesson") %>
<div class="container">
<div>
  <div class="row">
    <div class="col-md-8 col-md-offset-3 " id="your_col">
      <div class="title">
        <h2><%= t "name_lesson" %><%= @lesson.category.name %></h2>
      </div>
        <%= form_for [@lesson.category, @lesson] do |f| %>
          <%= f.fields_for :results do |t| %>
            <div class="row well" style="padding: 10px">
              <div class="col-md-6 ">
                <h3><%= t.object.word.content %></h3>
                <%= t.collection_radio_buttons :meaning_id, t.object.word.meanings,
                  :id, :content do |button| %>
                  <%= button.label(class: "radio"){button.radio_button + button.text} %>
                <% end %>
              </div>
            </div>
          <% end %>
        <%= f.submit t("submit"), data: {confirm: t("are_you_sure")},
          class: "btn btn-primary submit-answer" %>
      <% end %>
    </div>
  </div>
</div>
