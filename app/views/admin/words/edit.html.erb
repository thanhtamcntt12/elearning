<% provide :title, t("edit_word") %>
<h2><%= t "edit_word" %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @word] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.collection_select :category_id, @categories, :id, :name %>
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>
        <%= f.label :meanings %>
        <%= f.fields_for :meanings do |builder| %>
          <td><%= builder.text_field :content, class: "form-control" %></td>
          <%= f.label :is_correct %>
          <%= builder.check_box :is_correct, class: "check_but" %><br>
      <% end %>
      <%= f.submit t("edit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
